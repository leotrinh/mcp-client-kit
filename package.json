{
  "name": "mcp-client-kit",
  "version": "0.1.0",
  "description": "TypeScript/Node.js client library for connecting to multiple MCP (Model Context Protocol) servers",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:quick": "npx tsx tests/test-quick.ts",
    "test:all": "npx tsx tests/test-all-servers.ts",
    "test:local": "npx tsx tests/test-local.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "client",
    "json-rpc",
    "sse",
    "typescript"
  ],
  "author": "leotrinh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leotrinh/mcp-client-kit.git"
  },
  "homepage": "https://github.com/leotrinh/mcp-client-kit#readme",
  "bugs": {
    "url": "https://github.com/leotrinh/mcp-client-kit/issues"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "eventsource": "^2.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
